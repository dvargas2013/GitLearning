#!/bin/bash
cd "$( dirname "${BASH_SOURCE[0]}" )"
learndir="$( pwd )"$"/"
echo $learndir
cd ..
parentdir="$( pwd )"$"/"
cd "$parentdir"
echo $parentdir

if [ -z "$1" ]; then
  echo "No argument provided: please give repo link"
  read varname
  set -- $varname
fi

filename=$(basename "$1")
filename="${filename%.*}"
mkdir "$filename"
cd "$filename"
echo $( pwd )
ln $learndir$".gitignore" .

git init
git remote add origin "$1"
git add .
git commit -m "First"
git push --set-upstream origin master